<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <!-- Set the background color -->
            <solid android:color="@color/transparent"/>

            <!-- Define the corner radius to make the rectangle rounded -->
            <corners android:radius="16dp"/>

            <!-- Optional: Define stroke for border -->
            <stroke android:width="1dp" android:color="@color/black"/>

            <!-- Optional: Set padding inside the shape -->
            <padding android:left="15dp" android:right="15dp" android:top="5dp" android:bottom="5dp"/>
        </shape>
    </item>
</selector>