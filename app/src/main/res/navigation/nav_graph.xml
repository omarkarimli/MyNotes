<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/noteFragment">

    <fragment
        android:id="@+id/noteFragment"
        android:name="com.omarkarimli.mynotes.ui.NoteFragment"
        android:label="NoteFragment" >

        <action
            android:id="@+id/action_noteFragment_to_addEditNoteFragment"
            app:destination="@id/addEditNoteFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/addEditNoteFragment"
        android:name="com.omarkarimli.mynotes.ui.AddEditNoteFragment"
        android:label="AddEditNoteFragment" >

        <action
            android:id="@+id/action_addEditNoteFragment_to_noteFragment"
            app:destination="@id/noteFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />

        <argument
            android:name="note"
            app:argType="com.omarkarimli.mynotes.data.entity.Note"
            app:nullable="true" />
    </fragment>
</navigation>