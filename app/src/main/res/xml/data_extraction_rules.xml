<?xml version="1.0" encoding="utf-8"?>
<!--
   Sample data extraction rules file; uncomment and customize as necessary.
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
   for details.
-->
<data-extraction-rules>

    <!-- Cloud Backup Rules -->
    <cloud-backup>
        <!-- Include specific data in cloud backup -->
        <include domain="file" path="myapp/data/" />

        <!-- Exclude specific data from cloud backup -->
        <exclude domain="sharedpref" path="myapp/prefs/temp_prefs.xml" />
    </cloud-backup>

    <!-- Device Transfer Rules -->
    <device-transfer>
        <!-- Include specific data in device transfer -->
        <include domain="file" path="myapp/important/" />

        <!-- Exclude specific data from device transfer -->
        <exclude domain="sharedpref" path="myapp/prefs/cache.xml" />
    </device-transfer>

</data-extraction-rules>
