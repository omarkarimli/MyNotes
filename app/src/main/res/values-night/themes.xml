<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MyNotes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lilac</item>    <!-- App Bar, Bottom Navigation Icon, Text -->
        <item name="colorPrimaryVariant">@color/lilac</item> <!-- Status Bar bg -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lavender</item>  <!-- Button -->
        <item name="colorSecondaryVariant">@color/mauve</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/onError</item>

        <!--- Floating Action Button (FAB) -->
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>

    </style>
</resources>